{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-Wall",
				"-c",
				"-o",
				"${workspaceFolder}\\build\\main.o",
				"${workspaceFolder}\\src\\main.cpp",
				"-I${workspaceFolder}\\Dependencie\\freeglut\\include"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
